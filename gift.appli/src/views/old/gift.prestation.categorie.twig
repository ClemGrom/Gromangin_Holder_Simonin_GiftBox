{% extends "../gift.main.twig" %}

{% block title %}Categorie {{ categ_id }}{% endblock %}

{% block content %}
    <h1>Prestations</h1>
    {% for prestation in prestations %}
        <p>{{ prestation.id }}</p>
        <p>{{ prestation.libelle }}</p>
        <p>{{ prestation.description }}</p>
        <p>{{ prestation.tarif }}</p>
        <p>{{ prestation.unite }}</p>
        <a href="{{ url_for('prestation', {}, { 'id': prestation.id }) }}">Lien vers la prestation</a>
        <p>----------------------</p>
    {% endfor %}
{% endblock %}