{% extends "./main/gift.main.twig" %}

{% block title %}Création d'une box vide{% endblock %}

{% block content %}
    <form method="post">
        <div>
            <label>Nom</label>
            <input type="text" name="libelle" required>
        </div>
        <div>
            <label>Description</label>
            <input type="text" name="description" required>
        </div>
        <div>
            <label>Cadeau ?</label>
            <div>
                <input type="radio" id="choiceYes"
                       name="cadeau" value="oui" required>
                <label for="choiceYes">Oui</label>

                <input type="radio" id="choiceNo"
                       name="cadeau" value="non" required>
                <label for="choiceNo">Non</label>
            </div>
        </div>
        <div>
            <label>Message en cas de cadeau</label>
            <input type="text" name="message">
        </div>
        <label>Choisir une box pré-remplie</label>
        <select name="box" id="box-select">
            <option value="vide">Aucune</option>
            {% for box in boxes %}
                <option value="{{ box.id }}">{{ box.libelle }}</option>
            {% endfor %}
        </select>
        <br>
        <input type="hidden" name="csrf" value="{{ csrf }}">
        <input type="submit" value="Envoyer">
    </form>
{% endblock %}
