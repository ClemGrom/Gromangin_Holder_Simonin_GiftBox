{% extends "./main/gift.main.twig" %}

{% block title %}Prestations{% endblock %}


{% block content %}
    <a href="{{ url_for('prestationsTrieCroiss') }}">Trier les prestations par prix croissant</a>
    <a href="{{ url_for('prestationsTrieDecroiss') }}">Trier les prestations par prix d√©croissant</a>

    {% for presta in prestations %}
        <li><a class="links" href="{{ url_for('prestation', {}, { 'id': presta.id }) }}">{{ presta.libelle }}</a></li>
        <p>Tarif : {{ presta.tarif }}</p>
        <p>Categorie : {{ categorie[presta.cat_id].libelle }}</p>
        <img src="/img/{{ presta.img }}" width="300" height="300">
        <a href="{{ url_for('addPrestationToBox', {}, {'id': presta.id }) }}">Ajouter la prestation</a>
    {% endfor %}
{% endblock %}